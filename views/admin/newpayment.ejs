<%-include('../layouts/admin_header.ejs')%>
<h3 class="white text-center">Add New Payments Of Organization Members here</h3>
<hr />
<form action="/admin/pateron/pay/" method="POST">
  <div class="form-group">
    <label for="status">Payer</label>
    <select name="members" id="" class="form-control">
      <%users.forEach(user=>{ %>
      <option value="<%=user._id%>"><%=user.name%></option>
      <% })%>
    </select>
  </div>

    <div class="form-group">
      <label for="amount">Amount</label>
      <select name="amount" id="" class="form-control">
        <option value="5">₵5</option>
        <option value="10">₵10</option>
        <option value="15">₵15</option>
        <option value="20">₵20</option>
        <option value="25">₵25</option>
        <option value="30">₵30</option>
      </select>
    </div>

    <button type="submit" class="btn btn-success">Add Payment</button>
</form>

<%-include('../layouts/admin_footer.ejs')%>
